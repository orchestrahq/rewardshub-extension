{
  "manifest_version": 2,

  "name": "Rewards Hub",
  "description": "Reminding users of the rewards they get through their credit cards",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-zGroWad7AJrsX/o6iKjwfHNbchy1hHSqzYN9I7FyMNg='; object-src 'self'",
  "permissions": [
    "storage"
  ]
}
